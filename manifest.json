{
  "$schema": "./CWC_manifest_Schema.json",
  "mver": "1.2.0",
  "control": {
    "identity": {
      "name": "TruckTeesApp",
      "version": "1.0.0",
      "displayname": "Truck & Tees Management",
      "icon": "./icon/web.ico",
      "type": "guid://C7A3C9F8-34D1-4F4B-B5F1-59C9A30F93E5",
      "start": "./server.js"
    },
    "metadata": {
      "author": "Chetan",
      "keywords": [
        "Truck Master",
        "Card Master",
        "CRUD",
        "Express",
        "SQL"
      ],
      "description": "Node.js Express application for managing Truck Master and Card Master data with CRUD operations."
    },
    "contracts": {
      "api": {
        "methods": {
          "InsertTruck": {
            "parameters": {
              "TRUCK_REG_NO": { "type": "string" },
              "OWNER_NAME": { "type": "string" },
              "DRIVER_NAME": { "type": "string" },
              "HELPER_NAME": { "type": "string" },
              "CARRIER_COMPANY": { "type": "string" },
              "TRUCK_SEALING_REQUIREMENT": { "type": "string" },
              "BLACKLIST_STATUS": { "type": "string" },
              "REASON_FOR_BLACKLIST": { "type": "string" },
              "SAFETY_CERTIFICATION_NO": { "type": "string" },
              "CALIBRATION_CERTIFICATION_NO": { "type": "string" },
              "TARE_WEIGHT": { "type": "number" },
              "MAX_WEIGHT": { "type": "number" },
              "MAX_FUEL_CAPACITY": { "type": "number" }
            },
            "description": "Insert a new truck into TRUCK_MASTER table."
          },
          "InsertCard": {
            "parameters": {
              "CARD_NO": { "type": "string" },
              "CARD_STATUS": { "type": "number" }
            },
            "description": "Insert a new card into CARD_MASTER table."
          },
          "UpdateCard": {
            "parameters": {
              "CARD_NO": { "type": "string" },
              "NEW_CARD_NO": { "type": "string" },
              "CARD_STATUS": { "type": "number" }
            },
            "description": "Update card number and status."
          },
          "DeleteCard": {
            "parameters": {
              "CARD_NO": { "type": "array", "items": { "type": "string" } }
            },
            "description": "Delete selected card(s) from CARD_MASTER table."
          }
        },
        "events": {
          "TruckInserted": {
            "arguments": {
              "TRUCK_REG_NO": { "type": "string" }
            },
            "description": "Emitted when a truck record is successfully inserted."
          },
          "CardModified": {
            "arguments": {
              "CARD_NO": { "type": "string" },
              "ACTION": { "type": "string" }
            },
            "description": "Emitted when a card is added, updated, or deleted."
          }
        },
        "properties": {
          "ServerPort": {
            "type": "number",
            "default": 3000
          },
          "Database": {
            "type": "string",
            "default": "OP"
          },
          "TrustedConnection": {
            "type": "boolean",
            "default": true
          }
        }
      }
    },
    "types": {
      "CardStatus": {
        "type": "string",
        "enum": ["Active", "Block"],
        "default": "Active"
      }
    }
  }
}
